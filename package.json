{
  "name": "shikhboi",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm migrate:dev && concurrently 'pnpm:worker:*' 'vite dev'",
    "build": "pnpm migrate:prod && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "gen:db": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma db push",
    "worker:gen-ques": "tsx src/lib/workers/gen-ques.worker.ts",
    "worker:gen-outline": "tsx src/lib/workers/gen-outline.worker.ts",
    "worker:gen-lesson": "tsx src/lib/workers/gen-lesson.worker.ts",
    "worker:all": "concurrently pnpm:worker:gen-*",
    "start": "pnpm build && concurrently 'pnpm:worker:*' 'vite preview --host 0.0.0.0 --port 5173'"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.36.0",
    "@sveltejs/adapter-vercel": "^5.10.2",
    "@sveltejs/kit": "^2.42.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "eslint-plugin-svelte": "^3.12.3",
    "globals": "^16.4.0",
    "prisma": "^6.16.2",
    "svelte": "^5.39.3",
    "svelte-check": "^4.3.1",
    "sveltekit-superforms": "^2.27.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "valibot": "^1.1.0",
    "vite": "^7.1.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "msgpackr-extract",
      "prisma"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@iconify/svelte": "^5.0.2",
    "@mathjax/src": "^4.0.0",
    "@prisma/adapter-better-sqlite3": "^6.16.2",
    "@prisma/client": "^6.16.2",
    "@sveltejs/adapter-node": "^5.3.2",
    "@valibot/to-json-schema": "^1.3.0",
    "better-auth": "^1.3.13",
    "bullmq": "^5.58.7",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.13",
    "dotenv": "^17.2.2",
    "ioredis": "^5.7.0",
    "rehype-format": "^5.0.1",
    "rehype-mathjax": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-definition-list": "^2.0.0",
    "remark-directive": "^4.0.0",
    "remark-extended-table": "^2.0.3",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "svelte-sonner": "^1.0.5",
    "tsx": "^4.20.5",
    "unified": "^11.0.5"
  }
}