{
  "name": "shikhboi",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm migrate:dev && concurrently 'pnpm:worker:*' 'vite dev'",
    "build": "pnpm migrate:prod && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "gen:db": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma db push",
    "worker:gen-ques": "tsx src/lib/workers/gen-ques.worker.ts",
    "worker:gen-outline": "tsx src/lib/workers/gen-outline.worker.ts",
    "worker:gen-lesson": "tsx src/lib/workers/gen-lesson.worker.ts",
    "worker:all": "concurrently pnpm:worker:gen-*",
    "start": "concurrently 'pnpm:worker:*' 'vite preview --host 0.0.0.0'"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@sveltejs/adapter-vercel": "^5.6.3",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.3.3",
    "eslint": "^9.18.0",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "prisma": "^6.16.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "sveltekit-superforms": "^2.27.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "valibot": "^1.1.0",
    "vite": "^7.0.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "msgpackr-extract",
      "prisma"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.19.0",
    "@iconify/svelte": "^5.0.1",
    "@mathjax/src": "^4.0.0",
    "@mdit/plugin-alert": "^0.22.2",
    "@mdit/plugin-dl": "^0.22.1",
    "@mdit/plugin-img-mark": "^0.22.1",
    "@mdit/plugin-mark": "^0.22.1",
    "@mdit/plugin-mathjax": "^0.23.1",
    "@mdit/plugin-stylize": "^0.22.1",
    "@prisma/adapter-better-sqlite3": "^6.16.1",
    "@prisma/client": "^6.16.1",
    "@sveltejs/adapter-node": "^5.3.2",
    "@valibot/to-json-schema": "^1.3.0",
    "better-auth": "^1.3.11",
    "bullmq": "^5.58.5",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.10",
    "dotenv": "^17.2.2",
    "ioredis": "^5.7.0",
    "markdown-it": "^14.1.0",
    "svelte-sonner": "^1.0.5",
    "tsx": "^4.20.5"
  }
}
